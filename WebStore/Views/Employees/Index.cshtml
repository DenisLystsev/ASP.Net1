
@model IEnumerable<WebStore.Models.EmployeeView>
@{ 
    ViewBag.Title = "Index";
}


    <h4>Список сотрудников</h4>
    <hr />
    <table>
        <tr>
            <td>Имя</td>
            <td>Отчество</td>
            <td>Фамилия</td>
            <td>Возраст</td>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.Patronymic</td>
                <td>@item.LastName</td>
                <td>@item.Age</td>
                <td>@Html.ActionLink("Детали", "Details", new { id = item.Id })</td>
            </tr>
        }
    </table>