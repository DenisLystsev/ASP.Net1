
@model IEnumerable<WebStore.Models.EmployeeView>
@{
    ViewBag.Title = "Index";
}


<h4>Список сотрудников</h4>
<hr />
<a asp-action="Edit" class="btn btn-success"> Добавить </a>
<hr />
<table class="table table-bordered">
    <tr>
        <td> </td>
        <td>Имя</td>
        <td>Отчество</td>
        <td>Фамилия</td>
        <td>Возраст</td>
        <td> </td>
        <td> </td>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td><a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a></td>
        <td>@item.FirstName</td>
        <td>@item.Patronymic</td>
        <td>@item.LastName</td>
        <td>@item.Age</td>
        <td>@Html.ActionLink("Детали", "Details", new { id = item.Id })</td>
        <td><a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-cut"></i></a></td>
    </tr>
    }
</table>